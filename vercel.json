{
  "functions": {
    "app/api/cron/daily-summary/route.ts": {
      "maxDuration": 300
    },
    "app/api/cron/cleanup/route.ts": {
      "maxDuration": 60
    }
  },
  "crons": [
    {
      "path": "/api/cron/daily-summary",
      "schedule": "0 8 * * *"
